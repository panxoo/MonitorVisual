<table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>
                Opt
            </th>
            <th>
                Selec
            </th>
            <th>
                Nombre
            </th>
            <th>
                Fecha Alarma
            </th>
            <th>
                Fecha Soluci√≥n
            </th>
            <th>
                Falso Positivo
            </th>
            <th>
                Nota
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (ViewHistEstadoMonitor item in Model)
        {
            <tr>
                <td>
                    <a href="#" class="BtnEditarIndv" title="Editar Medico" id="@item.Monitor_Estado_HistID"
                       onClick="SelectUn(this)">
                        <i class="fas fa-pencil-alt fa-2x"></i>
                    </a>
                </td>
                <td>

                    <input type="checkbox" data-monitor="@item.Monitor_Estado_HistID" class="form-check checksel " />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaError)
                </td>
                <td>
                    @if (item.Solucion)
                    {
                        @Html.DisplayFor(modelItem => item.FechaSolucion)

                    }
                    else
                    {
                        <label class="badge badge-pill badge-danger">Continua Error</label>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.FalsoPositivo)</td>
                <td class="nt">@Html.DisplayFor(modelItem => item.Nota)</td>
            </tr>
        }
    </tbody>
</table>