<form id="AjaxFormRepHistEdit" method="post">
    <div class="modal fade" id="ReporteHistNota" tabindex="-1" role="dialog" aria-labelledby="ReporteHistNota"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nota de Alerta</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-row">

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="falsopositivo">
                            <label class="form-check-label" for="falsopositivo">Falso Positivo</label>
                        </div>

                        <div class="form-group col">
                            <label for="notamonitor">Nota Monitoreo</label>
                            <input type="text" class="form-control" id="notamonitor">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"
                        id="btnCancelMonitor">Cancelar</button>
                    <button type="submit" class="btn btn-success" id="SubmitBtnMonitor">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</form>